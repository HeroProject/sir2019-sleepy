<script type="text/javascript">
$(function () {
    $('#settingsForm').on('submit', function() {
        $.post('settings', $(this).serialize(),
                function(response){$('#popupContent').html('<pre>'+response+'</pre>');$('#popup').modal();});
        return false;
    });
    $('#robotLogs').on('click', function() {
        $.get('robot_logs', {}, function(response){$('#popupContent').html('<pre>'+response+'</pre>');$('#popup').modal();});
        return false;
    });
});
</script>

